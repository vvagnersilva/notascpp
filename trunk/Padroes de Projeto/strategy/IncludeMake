AR              = ar
CC              = gcc $(DEBUG) $(WARNING)
CXX             = g++ $(DEBUG) $(WARNING)
RANLIB          = ranlib
DIRINCLUDE      = /usr/local/include
DIRLIB          = /usr/local/lib

SHELL           = /bin/bash
DEBUG           = -ggdb
WARNING         = -Wall

.SUFFIXES:
.SUFFIXES:      .c .cc .cpp .o 


.cpp.o:
	$(CXX) -c $(CXXFLAGS) $(CPPFLAGS)  $<

.cc.o:
	$(CXX) -c $(CXXFLAGS) $(CPPFLAGS)  $<

.c.o:
	$(CC) -c  $(CFLAGS) $(CPPFLAGS)  $<


